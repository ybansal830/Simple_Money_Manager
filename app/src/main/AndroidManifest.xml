<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.myfirst.simplemoneymanager">

    <application
        android:name=".moneyapp.MoneyApplication"
        android:allowBackup="true"
        android:icon="@drawable/simple_money_manager_app_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SimpleMoneyManager">
        <activity android:name=".views.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.AddEditItemActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.MainActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>